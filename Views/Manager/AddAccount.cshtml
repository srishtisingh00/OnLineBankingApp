@model OnLineBankingApp.Models.Account

@{
    ViewData["Title"] = "AddAccount";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1>AddAccount</h1>

@if ( ViewBag.Account as Account != null)
{
    <h2 class="bg-success">@ViewData["AccountStatus"]</h2>
}
else
{
<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <select asp-for="CustomerID" class ="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>

              @*  <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfOpening" class="control-label"></label>
                <input asp-for="DateOfOpening" class="form-control" />
                <span asp-validation-for="DateOfOpening" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Account" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
<div>
    <a asp-action="CustomerStatusUpdate">Back to List</a>
</div>

