@model OnLineBankingApp.Models.Transaction

@{
    ViewData["Title"] = "DoTransactions";
    Layout = "~/Views/Shared/_AfterLayout.cshtml";
}

<h1>DoTransactions</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoTransactions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <select asp-for="AccountId" class ="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BeneficiaryId" class="control-label"></label>
                <select asp-for="BeneficiaryId" class ="form-control" asp-items="ViewBag.BeneficiaryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OpeningBalance" class="control-label"></label>
                <input asp-for="OpeningBalance" value='@ViewData["Balance"]' class="form-control" />
                <span asp-validation-for="OpeningBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
           @* <div class="form-group">
                <label asp-for="ClosingBalance" class="control-label"></label>
                <input asp-for="ClosingBalance" class="form-control" />
                <span asp-validation-for="ClosingBalance" class="text-danger"></span>
            </div>*@

            <input type="hidden" asp-for="TraId" value="1" class="form-control" />
            @*<div class="form-group">
                <label asp-for="TraId" class="control-label"></label>
                <input asp-for="TraId" class="form-control" />
                <span asp-validation-for="TraId" class="text-danger"></span>
            </div>*@
            @*<div class="form-group">
                <label asp-for="StatusID" class="control-label"></label>
                <select asp-for="StatusID" class ="form-control" asp-items="ViewBag.StatusID"></select>
            </div>*@
            <input type="hidden" asp-for="StatusID" value="1" class="form-control" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*<input asp-for="date" value="@DateTime.Today" type="datetime" class="form-control" />*@
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="datetime" value='@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")' class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Do Payment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TransactionsDetails">Back to Transactions Details</a>
</div>

